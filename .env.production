# 生产环境配置示例

# 环境配置
ENVIRONMENT=production
DEBUG=false

# 网关配置
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8080
GATEWAY_PREFIX=/api

# 后端服务配置
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# 模型服务配置
MODEL_SERVICE_HOST=0.0.0.0
MODEL_SERVICE_PORT=8001
MODEL_SERVICE_PREFIX=/api/v1

# 数据库配置
DATABASE_URL=postgresql://user:password@localhost:5432/lilfox

# JWT配置
SECRET_KEY=your-production-secret-key-must-be-very-long-and-secure
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS配置
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/lilfox/app.log

# OpenAI配置
OPENAI_API_KEY=your-production-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# Anthropic配置
ANTHROPIC_API_KEY=your-production-anthropic-api-key
ANTHROPIC_BASE_URL=https://api.anthropic.com

# 缓存配置
CACHE_TYPE=redis
CACHE_TTL=600
REDIS_URL=redis://localhost:6379/0

# 限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9090

# 服务发现配置
SERVICE_REGISTRY_TYPE=redis
REDIS_URL=redis://localhost:6379/1

# 安全配置
HTTPS_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/lilfox.crt
SSL_KEY_PATH=/etc/ssl/private/lilfox.key
